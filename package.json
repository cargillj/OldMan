{
  "name": "old-man-bot",
  "version": "0.0.3",
  "description": "I'm just an old bot, afraid of change.",
  "main": "src/OldManBot/OldMan.ts",
  "author": "cargillj",
  "watch": {
    "start": {
      "patterns": [
        "src"
      ]
    }
  },
  "scripts": {
    "pre-commit-message": "echo Performing pre-commit checks... && exit 0",
    "build": "tsc -p .",
    "clean": "rimraf build",
    "start": "NODE_ENV=PROD rimraf build && tsc -p . && node build/OldManBot/OldMan.js",
    "test": "NODE_ENV=TEST jest",
    "watch": "npm-watch",
    "release": "standard-version"
  },
  "jest": {
    "roots": [
      "src"
    ],
    "verbose": true
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run test && npm run build"
    }
  },
  "dependencies": {
    "@types/node": "^12.11.7",
    "axios": "^0.19.0",
    "discord.io": "https://github.com/woor/discord.io/tarball/gateway_v6",
    "moment": "^2.29.4",
    "node-schedule": "^1.3.2",
    "typescript": "^3.6.4",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-typescript": "^7.6.0",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/jest": "^24.0.21",
    "babel-jest": "^24.9.0",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "npm-watch": "^0.6.0",
    "rimraf": "^3.0.0",
    "standard-version": "^7.0.0",
    "ts-jest": "^24.1.0",
    "win-node-env": "^0.4.0"
  }
}
